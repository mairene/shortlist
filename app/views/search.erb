<div class="trash_list_container">
</div>
<div class="results_container">
  <% @businesses.each do |business|%>
    <div class="restaurant_container" draggable="true">
      <table>
        <tr id="restaurant_row">
          <td id="restaurant_column">
            <a id="left-arrow" href="/lists/trash"><img src="/imgs/arrow_left_2x.png"></a>
          </td>
          <td id="restaurant_column">
            <a class="restaurant_name" href="<%= business.url %>"><%= business.name %></a>
            <br>
            <img class="restaurant_img" src="<%= business.image_url%>">
            <br>
            <img class="restaurant_rating" src="<%= business.rating_img_url %>">
          </td>
          <td id="restaurant_column">
            <a id="right-arrow" href="/lists/gold"><img src="/imgs/arrow_right_2x.png"></a>
          </td>
        </tr>
      </table>
    </div>
  <% end %>
</div>
